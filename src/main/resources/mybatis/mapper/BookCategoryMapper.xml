<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sy.mapper.BookCategoryMapper">

    <select id="getAllCount" resultType="java.lang.Integer">
    select count(*) from book_category
    </select>

    <select id="getBookCategoryByPage" parameterType="java.lang.Integer" resultType="BookCategory">
    select * from book_category limit #{page},#{limit}
    </select>

</mapper>