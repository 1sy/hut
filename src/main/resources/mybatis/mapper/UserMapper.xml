<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sy.mapper.UserMapper">

    <select id="getAll" resultType="User">
    select * from user
    </select>

    <select id="getPwdByUsername" parameterType="java.lang.String" resultType="User">
    select * from user u where user_name=#{userName}
    </select>

    <select id="getUserById" parameterType="java.lang.Long" resultType="User">
        select * from user u where user_id=#{userId}
    </select>

    <update id="updateUserInfo" parameterType="User">
        update user set user_email=#{userEmail},user_img=#{userImg} where  user_id=#{userId}
    </update>

</mapper>